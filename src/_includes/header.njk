<header class="bg-white">
  <nav aria-label="Global" class="mx-auto flex max-w-7xl items-center justify-between gap-x-6 p-6 lg:px-8">
    <div class="flex lg:flex-1">
      <a href="/{{ locale }}/" class="-m-1.5 p-1.5 block w-40 text-teal-900 hover:text-emerald-400 transition-colors duration-200">
        <span class="sr-only">Kerlinkin</span>
        <svg class="h-8 w-auto" viewBox="0 0 200 40" fill="none" xmlns="http://www.w3.org/2000/svg">
            <text x="0" y="30" fill="currentColor" font-family="'Sora', sans-serif" font-size="28" font-weight="800" letter-spacing="0.05em">KERLINKIN</text>
        </svg>
      </a>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="{{ i18n.nav.home.link[locale] }}" class="text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">{{ i18n.nav.home[locale] }}</a>
      <a href="{{ i18n.nav.services.link[locale] }}" class="text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">{{ i18n.nav.services[locale] }}</a>
      <a href="{{ i18n.nav.about.link[locale] }}" class="text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">{{ i18n.nav.about[locale] }}</a>
      <a href="{{ i18n.nav.contact.link[locale] }}" class="text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">{{ i18n.nav.contact[locale] }}</a>
    </div>
    <div class="flex flex-1 items-center justify-end gap-x-6">
      <!-- Language Switcher -->
      {% if locale == 'en' %}
         <a href="{{ i18n.nav[pageKey].link['fr'] if pageKey else '/fr/' }}" class="flex items-center gap-x-1 text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">
           <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
           </svg>
           FR
         </a>
      {% else %}
         <a href="{{ i18n.nav[pageKey].link['en'] if pageKey else '/en/' }}" class="flex items-center gap-x-1 text-sm/6 font-semibold text-teal-700 hover:text-emerald-500 transition-colors duration-200">
           <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
             <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
           </svg>
           EN
         </a>
      {% endif %}
      

    </div>
    <div class="flex lg:hidden">
      <button type="button" command="show-modal" commandfor="mobile-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
          <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
      </button>
    </div>
  </nav>
  <el-dialog>
    <dialog id="mobile-menu" class="backdrop:bg-transparent lg:hidden">
      <div tabindex="0" class="fixed inset-0 focus:outline-none">
        <el-dialog-panel class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white p-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
          <div class="flex items-center gap-x-6">
            <a href="/{{ locale }}/" class="-m-1.5 p-1.5 block w-32 text-teal-900 hover:text-emerald-400 transition-colors duration-200">
              <span class="sr-only">Kerlinkin</span>
              <svg class="h-8 w-auto" viewBox="0 0 200 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <text x="0" y="30" fill="currentColor" font-family="'Sora', sans-serif" font-size="28" font-weight="800" letter-spacing="0.05em">KERLINKIN</text>
              </svg>
            </a>

            <button type="button" command="close" commandfor="mobile-menu" class="-m-2.5 rounded-md p-2.5 text-gray-700">
              <span class="sr-only">Close menu</span>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
                <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </button>
          </div>
          <div class="mt-6 flow-root">
            <div class="-my-6 divide-y divide-gray-500/10">
              <div class="space-y-2 py-6">
                <a href="{{ i18n.nav.home.link[locale] }}" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-teal-700 hover:bg-gray-50 hover:text-teal-900">{{ i18n.nav.home[locale] }}</a>
                <a href="{{ i18n.nav.services.link[locale] }}" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-teal-700 hover:bg-gray-50 hover:text-teal-900">{{ i18n.nav.services[locale] }}</a>
                <a href="{{ i18n.nav.about.link[locale] }}" class="-mx-3 block rounded-lg px-3 py-2 text-base/7 font-semibold text-teal-700 hover:bg-gray-50 hover:text-teal-900">{{ i18n.nav.about[locale] }}</a>
    
              </div>
              <div class="py-6">
                {% if locale == 'en' %}
                    <a href="{{ i18n.nav[pageKey].link['fr'] if pageKey else '/fr/' }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50 flex items-center gap-x-2">
                       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                         <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                       </svg>
                       Switch to French
                    </a>
                {% else %}
                    <a href="{{ i18n.nav[pageKey].link['en'] if pageKey else '/en/' }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base/7 font-semibold text-gray-900 hover:bg-gray-50 flex items-center gap-x-2">
                       <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                         <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                       </svg>
                       Passer en Anglais
                    </a>
                {% endif %}
              </div>
            </div>
          </div>
        </el-dialog-panel>
      </div>
    </dialog>
  </el-dialog>
</header>
