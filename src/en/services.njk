---
layout: base.njk
title: Services
description: Discover our strategic and operational consulting services.
pageKey: "services"


---

<div class="bg-white">
  <!-- Header -->


  <main class="relative isolate">
    <!-- Background -->


    <!-- Header section -->
    <div class="px-6 pt-14 lg:px-8">
      <div class="mx-auto max-w-2xl pt-24 text-center sm:pt-40">
        <h1 class="text-5xl font-semibold tracking-tight text-teal-900 sm:text-6xl">{{ i18n.services_new.title[locale] }}</h1>
        <p class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8">{{ i18n.services_new.description.en }}</p>
      </div>
    </div>

    <!-- Content section -->
    <div class="mx-auto mt-20 max-w-7xl px-6 lg:px-8 pb-24 sm:pb-32">
       <dl class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-base/7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-2">
        {% for item in i18n.services_new.items %}
        <div class="flex flex-col h-full">
          <dt class="text-2xl font-semibold tracking-tight text-gray-900">{{ item.title.en }}</dt>
          <dd class="mt-4 flex flex-col flex-auto">
            <p class="font-medium text-brand-secondary">{{ item.tagline.en }}</p>
            <p class="mt-2 text-base/7 text-gray-600">{{ item.description.en }}</p>
            <ul role="list" class="mt-6 space-y-3 text-sm/6 text-gray-600">
               {% for detail in item.details %}
               <li class="flex gap-x-3">
                  <svg class="h-6 w-5 flex-none text-brand-secondary" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 0 1 .143 1.052l-8 10.5a.75.75 0 0 1-1.127.075l-4.5-4.5a.75.75 0 0 1 1.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 0 1 1.05-.143Z" clip-rule="evenodd" />
                  </svg>
                  {{ detail.en }}
               </li>
               {% endfor %}
            </ul>
          </dd>
        </div>
        {% endfor %}
      </dl>
    </div>

  </main>


